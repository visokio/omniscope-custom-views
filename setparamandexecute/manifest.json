{
  "name": "Set Parameters and Execute",
  "frameworkVersion": "v1",
  "icon": "icon.svg",
  "thumbnail": "thumbnail.png",
  "tags": [
    "custom",
    "lambda",
    "parameter",
    "param",
    "workflow",
    "job",
    "execute",
    "execution",
    "block",
    "api"
  ],
  "sandbox": false,
  "autoPane": false,
  "autoQuery": false,
  "dataLimit": 10000,
  "supportsSelection": true,
  "options": {
    "items": {
      "block": {
        "displayName": "Blocks to execute (comma separated names)",
        "type": "TEXT",
        "mandatory": true
      },
      "buttonText": {
        "displayName": "Button text",
        "type": "TEXT"
      },
      "paramNames": {
        "displayName": "Param names (comma separated names)",
        "type": "TEXT"
      },
      "refreshFromSource": {
        "displayName": "Refresh from source",
        "type": "TOGGLE"
      },
      "wGrid": { 
        "displayName": "Grid Width",
        "type": "NUMBER"
      },
      "showJobState": {
        "displayName": "Show job state",
        "type": "TOGGLE"
      }
    },
    "structure": {
      "toolbar": [
        "block",
        "refreshFromSource",
        "buttonText",
        "paramNames",
        "showJobState"
      ],
      "x": [],
      "y": []
    }
  },
  "defaultOptions": {
    "items": {
      "buttonText": "Execute",
      "refreshFromSource": true,
      "wGrid": 200
    },
    "pane": {
      "yAxisHeaderWidth": 75,
      "paneWidth": 200,
      "paneHeight": 200,
      "showGridLines": true,
      "gridLineThickness": 1,
      "gridLineColour": "rgba(229,229,229,1)",
      "headerStyle": {
        "size": 12,
        "colour": "#333333",
        "backgroundColour": "#FFFFFF"
      },
      "showPaneXHeader": true,
      "showPaneYHeader": true,
      "showTileHeader": true,
      "xHeaderStyle": {},
      "yHeaderStyle": {},
      "tileHeaderStyle": {},
      "xHeaderLines": 1,
      "tileHeaderLines": 1,
      "xHeaderPlacement": "TOP",
      "yHeaderPlacement": "LEFT",
      "showColourKeyInEveryPane": false,
      "enableTouchScrolling": false
    }
  },
  "pane": {
    "minWidth": 50,
    "minHeight": 50
  }
}
